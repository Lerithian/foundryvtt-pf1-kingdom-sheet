<div class="event-chance">
  <div class="info-box-header">
    <h3>
      <a class="rollable" data-tooltip="PF1KS.RollEvent">
        <i class="fa-solid fa-dice-d20"></i>
        <span>{{localize "PF1KS.EventLabel"}}</span>
      </a>
    </h3>

    <div class="info-box-joined flex0">
      <div class="info-box">
        <h5>{{ localize "PF1KS.EventChance" }}</h5>
        <span class="value">{{ eventChance }}%</span>
      </div>
      <div class="info-box">
        <h5>{{localize "PF1KS.EventLastTurn" }}</h5>
        <div class="value">
          <input type="checkbox" name="system.eventLastTurn" {{checked system.eventLastTurn}} />
        </div>
      </div>
    </div>
  </div>
</div>

<ol class="item-groups-list">
  {{#each eventSections}}
  <ol class="item-list">
    <li class="flexrow item-list-header">
      <div class="item-name">
        <h3>{{ label }}</h3>
      </div>
      <div class="item-detail item-controls">
        <a
          class="item-control item-create"
          data-type="{{ @root.eventType }}"
          data-sub-type="{{ subType }}"
          data-tooltip="PF1KS.CreateItem"
        >
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each events}}
    <li class="flexrow item" data-id="{{ id }}">
      <div class="item-name expand-summary">
        <div class="item-image" style="background-image: url('{{ img }}')"></div>
        <span>{{ name }}</span>
      </div>
      <div class="flexrow item-detail item-controls">
        <a class="item-control item-edit" data-tooltip="PF1KS.EditItem">
          <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a class="item-control item-duplicate" data-tooltip="PF1KS.DuplicateItem">
          <i class="fa-solid fa-copy"></i>
        </a>
        <a class="item-control item-delete" data-tooltip="PF1KS.DeleteItem">
          <i class="fa-solid fa-trash"></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
  {{/each}}
</ol>
