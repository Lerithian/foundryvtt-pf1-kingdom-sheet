<select name="system.commander.actor">
  {{selectOptions commanderChoices selected=actorId blank=''}}
</select>

<span>{{localize "PF1KS.KingdomLeader"}}</span>
<input type="checkbox" name="system.commander.kingdomLeader" {{checked system.commander.kingdomLeader}} />

<div class="flex0">
  <div class="info-box-joined">
    <div class="info-box">
      <h5>{{ localize "PF1KS.Army.MoraleBonus" }}</h5>
      <span class="value">{{ system.commander.moraleBonus }}</span>
    </div>
    <div class="info-box">
      <h5>{{localize "PF1KS.Army.Leadership" }}</h5>
      <span class="value">{{ system.commander.leadership }}</span>
    </div>
    <div class="info-box">
      <h5>{{localize "PF1KS.Army.MaxBoons" }}</h5>
      <span class="value">{{ system.commander.maxBoons }}</span>
    </div>
  </div>
</div>

<ol class="item-list">
  <li class="flexrow item-list-header">
    <div class="item-name">
      <h3>{{ localize "PF1KS.Boons" }}</h3>
    </div>
    <div class="item-detail item-controls">
      <a class="item-control item-create" data-type="{{ boonType }}" data-tooltip="PF1KS.CreateItem">
        <i class="fa-solid fa-plus"></i>
      </a>
    </div>
  </li>
  {{#each boons}}
  <li class="flexrow item" data-id="{{ id }}">
    <div class="item-name expand-summary">
      <div class="item-image" style="background-image: url('{{ img }}')"></div>
      <span>{{ name }}</span>
    </div>
    <div class="flexrow item-detail item-controls">
      <a class="item-control item-edit" data-tooltip="PF1KS.EditItem">
        <i class="fa-solid fa-pen-to-square"></i>
      </a>
      <a class="item-control item-delete" data-tooltip="PF1KS.DeleteItem">
        <i class="fa-solid fa-trash"></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
