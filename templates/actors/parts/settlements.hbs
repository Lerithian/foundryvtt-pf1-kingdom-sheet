{{!-- Settlements Navigation --}}
<nav class="sheet-navigation tabs" data-group="settlements">
  {{#each settlements as |settlement idx|}}
  <a class="item" data-tab="{{ idx }}" data-group="settlements">{{ settlement.name }}</a>
  {{/each}}
  <a class="item" data-tab="orph" data-group="settlements">Orphans</a>
</nav>

<section class="settlements-body">
  {{#each settlements as |settlement idx|}}
  <div class="tab flexcol" data-group="settlements" data-tab="{{ idx }}">
    <div class="flex0 details">
      <span>{{localize "PF1KS.DistrictCount"}}:</span>
      <span>{{ settlement.districtCount }}</span>

      <span>{{localize "PF1KS.Population"}}:</span>
      <span>{{ settlement.population }}</span>

      <span>{{localize "PF1KS.Size"}}:</span>
      <span>{{ settlement.sizeLabel }}</span>

      <span>{{localize "PF1KS.BaseValue"}}:</span>
      <span>{{ settlement.baseValue.total }}</span>

      <span>{{localize "PF1KS.Defense"}}:</span>
      <span>{{ settlement.defense.total }}</span>

      <span>{{localize "PF1KS.Danger"}}:</span>
      <span>{{ settlement.danger }}</span>

      <span>{{localize "PF1KS.Corruption"}}:</span>
      <span>{{ settlement.corruption.total }}</span>

      <span>{{localize "PF1KS.Crime"}}:</span>
      <span>{{ settlement.crime.total }}</span>

      <span>{{localize "PF1KS.Productivity"}}:</span>
      <span>{{ settlement.productivity.total }}</span>

      <span>{{localize "PF1KS.Law"}}:</span>
      <span>{{ settlement.law.total }}</span>

      <span>{{localize "PF1KS.Lore"}}:</span>
      <span>{{ settlement.lore.total }}</span>

      <span>{{localize "PF1KS.Society"}}:</span>
      <span>{{ settlement.society.total }}</span>
    </div>

    <ol class="item-list">
      <li class="flexrow item-list-header">
        <span class="item-name">{{localize "PF1KS.Buildings"}}</span>
        <div class="item-detail item-controls">
          <a class="item-control item-create" data-type="{{ @root.buildingType }}" data-tooltip="PF1KS.CreateItem">
            <i class="fa-solid fa-plus"></i>
          </a>
        </div>
      </li>
      {{#each buildings}}
      <li class="flexrow item" data-id="{{ id }}">
        <div class="item-name expand-summary">
          <div class="item-image" style="background-image: url('{{ img }}')"></div>
          <span>{{ name }}</span>
        </div>
        <div class="flexrow item-detail item-controls">
          <a class="item-control item-edit" data-tooltip="PF1KS.EditItem">
            <i class="fa-solid fa-pen-to-square"></i>
          </a>
          <a class="item-control item-delete" data-tooltip="PF1KS.DeleteItem">
            <i class="fa-solid fa-trash"></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
  {{/each}}

  <div class="tab flexcol" data-group="settlements" data-tab="orph">
    <ol class="item-list">
      <li class="flexrow item-list-header">
        <span class="item-name">{{localize "PF1KS.Buildings"}}</span>
        <div class="item-detail item-controls"></div>
      </li>
      {{#each noSettlementBuildings}}
      <li class="flexrow item" data-id="{{ id }}">
        <div class="item-name expand-summary">
          <div class="item-image" style="background-image: url('{{ img }}')"></div>
          <span>{{ name }}</span>
        </div>
        <div class="flexrow item-detail item-controls">
          <a class="item-control item-edit" data-tooltip="PF1KS.EditItem">
            <i class="fa-solid fa-pen-to-square"></i>
          </a>
          <a class="item-control item-delete" data-tooltip="PF1KS.DeleteItem">
            <i class="fa-solid fa-trash"></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>
